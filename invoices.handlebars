<head>
   <link rel="stylesheet" href="eco.css">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>

<div id="gross">
<table class="invoice" id="invoices">
    <thead>
        <tr>
            <th colspan="5">Rechnungen</th>
        </tr>
        <tr>
            <th>
                <span>Kategorie</span>
            </th>
            <th>
                <span>Verbrauchswert</span>
            </th>
            <th>
                <span>Emissionsfaktor</span>
            </th>
            <th>
                <span>Start-Datum</span>
            </th>
            <th>
                <span>End-Datum</span>
            </th>
        </tr>
    </thead>
    <tbody>
        {{#each invoices}}
        <tr>
            <td>
                <span>{{this.fk_rechn_kategorie}}</span>
            </td>
            <td>
                <span>{{this.rechnung_verbrauchswert}} {{this.fk_rechn_einheit}}</span>
            </td>
            <td>
                <span>{{this.rechnung_emissionsfaktor}}</span>
            </td>
            <td>
                <span>{{formatDateTime this.rechnungsdaten_startdatum}}</span>
            </td>
            <td>
                <span>{{formatDateTime this.rechnung_enddatum}}</span>
            </td>
            <td>
                <form action="/invoices/delete/{{this.rechnung_ID}}" method="POST">
                    <a href="javascript:;" onclick="if(confirm('Möchten Sie diesen Eintrag wirklich löschen?')){parentNode.submit();}">X</a>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<a href="/invoices/insert">Neue Abrechnung hinzufügen</a>
</div>
